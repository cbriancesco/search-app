div(ng-show='showContent')
    h2 EDIT TEAM
    div(class="button", ngf-select, ng-model="file", name="file", ngf-pattern="'image/*'", ngf-accept="'image/*'", ngf-max-size="20MB") Select

    img(ng-show='editTeam.imageShow || imageDefault', ng-src="{{editTeam.imageShow || imageDefault}}", width='200')


    p Create New Team
    input(type='text', ng-model='editTeam.name', placeholder='Team Name')

    p Team Positions
    textarea(ng-model='positions', placeholder='Team Positions')

    button(ng-click="updateTeam()") Update Team
    button(ng-click="deleteTeam(editTeam._id)") Delete Team